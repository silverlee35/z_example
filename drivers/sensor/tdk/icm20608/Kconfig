menuconfig ICM20608
	bool "ICM20608 Six-Axis Motion Tracking Device"
	default y
	depends on DT_HAS_INVENSENSE_ICM20608_ENABLED
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM20608),i2c)
	help
	  Enable driver for ICM20608 I2C-based six-axis motion tracking device.

if ICM20608

choice ICM20608_TRIGGER_MODE
	prompt "Trigger mode"
	default ICM20608_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config ICM20608_TRIGGER_NONE
	bool "No trigger"

config ICM20608_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ICM20608_TRIGGER

config ICM20608_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ICM20608_TRIGGER

endchoice

config ICM20608_TRIGGER
	bool

config ICM20608_THREAD_PRIORITY
	int "Thread priority"
	depends on ICM20608_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ICM20608_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ICM20608_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ICM20608
