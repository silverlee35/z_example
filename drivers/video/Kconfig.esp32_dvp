config VIDEO_ESP32
	bool "Video interface driver"
	select DMA
	depends on DT_HAS_ESPRESSIF_ESP32_LCD_CAM_ENABLED
	default y
	help
	  This option enables the video interface for the esp32s3.

config VIDEO_ESP32_VSYNC_INTERRUPT
	bool "VSync interrupt"
	select POLL
	help
	  Enables a new signal that gets triggered on vsync interrupt
