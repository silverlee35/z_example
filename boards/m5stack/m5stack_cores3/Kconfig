if BOARD_M5STACK_CORES3_ESP32S3_PROCPU || BOARD_M5STACK_CORES3_ESP32S3_PROCPU_SE

config HEAP_MEM_POOL_ADD_SIZE_BOARD
	int
	default $(UINT16_MAX) if WIFI && BT
	default 51200 if WIFI
	default 40960 if BT
	default 4096

endif # BOARD_M5STACK_CORES3_ESP32S3_PROCPU || BOARD_M5STACK_CORES3_ESP32S3_PROCPU_SE


if BOARD_M5STACK_CORES3_ESP32S3_APPCPU || BOARD_M5STACK_CORES3_ESP32S3_APPCPU_SE

config HEAP_MEM_POOL_ADD_SIZE_BOARD
	int
	default 256

endif # BOARD_M5STACK_CORES3_ESP32S3_APPCPU || BOARD_M5STACK_CORES3_ESP32S3_APPCPU_SE
